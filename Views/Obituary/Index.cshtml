@model IEnumerable<Assignment1.Models.Obituary>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<br />
<h3><b>Search Obituary</b></h3>
<form asp-action="Search" method="get">
    <input type="text" name="name" placeholder="Enter name..." />
    <button type="submit">Search</button>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfDeath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Biography)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryPhotoBase64)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAtUtc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(model => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(model => item.DateOfDeath)
            </td>
            <td>
                @Html.DisplayFor(model => item.Biography)
            </td>
            <td>
                @Html.DisplayFor(model => item.PrimaryPhotoBase64)
            </td>
            <td>
                @Html.DisplayFor(model => item.CreatedByUserId)
            </td>
            <td>
                @Html.DisplayFor(model => item.CreatedAtUtc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
